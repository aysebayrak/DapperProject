@model Casgem_DapperProject.DAL.Entities.Headings
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <form method="post">
        <input type="hidden" asp-for="HeadingID"/>
        <label>Başlık Adı</label>
        <input type="text" class="form-control" asp-for="HeadingName" />
        <br />
        <label>Başlık Durumu</label>
        <br /><br />
        <label>Aktif</label>
        <input class="form-check-input" type="radio" asp-for="HeadingStatus" value="True">
        <label>Pasif</label>
        <input class="form-check-input" type="radio" asp-for="HeadingStatus" value="False">
        <br />
        <br />
        <button class="btn btn-primary">Başlığı Güncelle</button>
    </form>
</div>
